{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "ponyc --debug -o ./bin",
            "problemMatcher": "$ponyc-matcher"
        },
        {
            "label": "build tests",
            "group": {
              "kind": "build",
            },
            "type": "shell",
            "options": {
              "cwd": "${workspaceFolder}"
            },
            "command": "ponyc --debug ~/mqtt/tests -o bin",
            "problemMatcher": "$ponyc-matcher"
        },
        {
          "label": "build broker",
          "group": {
            "kind": "build",
          },
          "type": "shell",
          "options": {
            "cwd": "${workspaceFolder}"
          },
          "command": "ponyc --debug ~/mqtt/broker -o bin",
          "problemMatcher": "$ponyc-matcher"
        },
        {
          "label": "clean",
          "group": {
            "kind": "build",
            "isDefault": false
          },
          "type": "shell",
          "command": "rm -I -f ~/mqtt/bin/*",
          "problemMatcher": "$ponyc-matcher"
        },
        {
            "label": "docs ",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "ponyc --docs ${workspaceFolder} -o docs && rm ${workspaceFolder}${pathSeparator}docs${pathSeparator}${workspaceFolderBasename}",
            "problemMatcher": "$ponyc-matcher"
        },
        {
          "label": "all",
          "group": "build",
          "type": "shell",
          "options": {
            "cwd": "${workspaceFolder}"
          },
          "command": "echo build all complete",
          "dependsOn": [
            "build",
            "build broker",
            "build tests"
          ],
          "problemMatcher": "$ponyc-matcher"
        },
        {
            "label": "echo",
            "type": "shell",
            "command": "echo ${workspaceFolder}${pathSeparator}docs${pathSeparator}${workspaceFolderBasename} ",
            "problemMatcher": []
        }
    ]
}